<div id="<%= dom_id job %>">
  <div class="card-body d-flex flex-column justify-content-center align-items-center" style="height: 70vh; padding-top: 20px;">
    <div class="card text-center" style="width: 700px;">
      <div class="card-body">
        <h1><%= job.company_name.capitalize %> Job</h1>
        <div class="field form-group">
          <strong>Company name:</strong>
          <%= job.company_name.capitalize %>
        </div>
        <div class="field form-group">
          <strong>Zendesk subdomain:</strong>
          <%= job.zendesk_subdomain %>
        </div>
        <div class="field form-group">
          <strong>Zendesk username:</strong>
          <%= job.zendesk_username %>
        </div>
        <div class="field form-group">
          <strong>Zendesk api key:</strong>
          <%= job.zendesk_api_key %>
        </div>
        <div class="field form-group">
          <strong>Intercom api key:</strong>
          <%= job.intercom_api_key %>
        </div>
        <div class="d-flex justify-content-center">
          <%= link_to "Edit this job", edit_job_path(@job), class: 'btn btn-info mx-2' %>
          <%= link_to "Back to jobs", jobs_path, class: 'btn btn-secondary mx-2' %>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <%= button_to "Stop", job, method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
